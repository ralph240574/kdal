<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/time"
        android:layout_width="@dimen/hourly_colum0_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?android:attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="@dimen/hourly_colum1_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?android:attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/cond"
        android:layout_width="@dimen/hourly_colum2_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/precip"
        android:layout_width="@dimen/hourly_colum3_width"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:gravity="right"
        android:textAppearance="?android:attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?android:attr/textAppearanceListItem" />


</LinearLayout>
